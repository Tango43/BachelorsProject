#!/bin/bash
#Define Target folder in /mnt
target="ransom"

#Features
entropies=( .text .data adata .rsrc reloc )
hexoutputs=( MajorLinkerVersion MajorImageVersion NumberOfSections ImageBase SizeOfHeapReserve BaseOfCode  MinorLinkerVersion MinorOperatingSystemVersion MinorImageVersion MinorSubsystemVersion SizeOfCode SizeOfInitializedData SizeOfUninitializedData AddressOfEntryPoint BaseOfData ImageBase SectionAlignment FileAlignment SizeOfImage SizeOfHeaders MajorSubsystemVersion MinorSubsystemVersion SizeOfStackReserve SizeOfStackCommit SizeOfHeapReserve SizeOfHeapCommit)

datafile="/mnt/"$target".csv"

for file in /mnt/"$target"/*
do
  sudo chmod 777 "$file"   #Make sure we have all needed privilges on each file, or just run as root...
  if output="$(sudo pecheck.py "$file")" ; then #make variable for faster processing
  #Identifier
   echo -n "$target" >> "$datafile"  
   
   #DLL count
   echo -n "," >> "$datafile"  #dataprocessing ","
   echo -n "$output" | grep -ci -E "\.dll\." | tr -d '\n' >> "$datafile"  #Count Dll numbers and outputs
   #API
   echo -n "," >> "$datafile"
   echo -n "$output" | grep -c "API" | tr -d '\n' >> "$datafile"
   
   #Hexoutputs
   for hexoutputer in "${hexoutputs[@]}"
   do
    echo -n "," >> "$datafile"
    hexvalue="$(echo -n "$output" | grep "$hexoutputer" | awk '{print $4}' | sed -r 's/^.{2}//' | tr -d '\n')"
    echo "ibase=16; "$hexvalue"" | bc | tr -d '\n' >> "$datafile"
   done
   
   #Entropies
   for entropy in "${entropies[@]}"
   do
    echo -n "," >> "$datafile"
    echo -n "$output" | grep ""$entropy" entropy" | awk '{print $3}' | tr -d '\n' >> "$datafile"
   done
   
   #End file
   echo -en '\n' >> "$datafile"
  else
   echo "$file" failed
  fi
done

