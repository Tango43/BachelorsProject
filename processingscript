#!/bin/bash

for file in /mnt/ransom/*
do
  sudo chmod 777 "$file"   #Make sure we have all needed privilges on each file, or just run as root...
  output="$(sudo pecheck.py "$file")"
  echo -n malware >> /mnt/data.csv  #identifies for each line
  echo -n "," >> /mnt/data.csv  #dataprocessing ","
  echo "$output" | grep -ci -E "\.dll\." >> /mnt/data.csv  #Count Dll numbers and outputs
  sed -i '/,0/ d' data.csv  #Removes 0 values from dll, caused trying to PE header check non PE files
done
